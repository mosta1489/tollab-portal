
@model TolabPortal.DataAccess.Models.SubCategoryResponse

@{
    ViewBag.CurrentPageTitle = "اختر الصف";
    var items = new string[] { "الرئيسية", "اختر الصف" };
    ViewBag.MenuItems = items;
}

@if (ViewBag.HasError != null && ViewBag.HasError == true)
{
    <div class="alert alert-danger2 alert-dismissible fade show course-alert-info">
        <div class="d-flex align-items-center">
            <i class="la la-info-circle fs-30 mr-2"></i> لم يتم اختيار الصف
        </div>
        <button type="button" class="close fs-20 pd-16" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" class="la la-times"></span>
        </button>
    </div>
}

<div class="card card-item">
    <div class="card-body">
        <form class="pt-2">
            <p class="mb-4 fontbb">الثانوية العامة ( الشهادة المصرية )</p>
            <div class="payment-option-wrap">
                <div class="payment-tab noshadbord">
                    <div class="payment-tab-toggle">
                        <input id="levelone" name="radio" type="radio" value="levelone">
                        <label for="levelone">الصف الأول الثانوي</label>
                    </div>
                    <div class="payment-tab-content">
                        <div class="custom-control custom-checkbox fs-15">
                            <input type="checkbox" class="custom-control-input" id="sublevelone">
                            <label class="custom-control-label custom--control-label w-100" for="sublevelone">العامة</label>
                        </div><!-- end custom-control -->
                        <div class="custom-control custom-checkbox fs-15">
                            <input type="checkbox" class="custom-control-input" id="subleveltwo">
                            <label class="custom-control-label custom--control-label w-100" for="subleveltwo">العامة</label>
                        </div><!-- end custom-control -->
                        <div class="custom-control custom-checkbox fs-15">
                            <input type="checkbox" class="custom-control-input" id="sublevelthree">
                            <label class="custom-control-label custom--control-label w-100" for="sublevelthree">العامة</label>
                        </div><!-- end custom-control -->
                    </div>
                </div><!-- end payment-tab -->
            </div>
            <div class="btn-box align-items-center justify-content-between mt-2 pullone">
                <a href="#" class="btn-text linkunder2">رجوع</a>
                <button type="submit" class="btn theme-btn ml-3 ">تخصيص <i class="la la-arrow-right icon ml-1"></i></button>
            </div><!-- end btn-box -->
        </form>
    </div><!-- end card-body -->
</div><!-- end card -->