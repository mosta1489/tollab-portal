@model IEnumerable<TolabPortal.DataAccess.Models.Track>
@{

    var interest = (TolabPortal.Models.GetStudentProfileModel.Interest)ViewBag.Interest;

    ViewBag.CurrentPageTitle = interest.SubCategoryName;
    var items = new string[] { "الرئيسية", interest.SectionNameLT, interest.CategoryNameLT, interest.SubCategoryNameLT };
    ViewBag.MenuItems = items;
}

<section class="course-area section--padding  pt-60px pb-40px bg-grligh">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        if (item.CountCourse <= 0)
                            continue;

                        <div class="col-lg-4 responsive-column-half">
                            <div class="card card-item card-preview">
                                <div class="card-image">
                                    <a href="/courses/details?trackId=@item.Id" class="d-block">
                                        <img class="card-img-top lazy" src="images/img-loading-ar.png" data-src="images/section001.jpg">
                                    </a>
                                </div><!-- end card-image -->
                                <div class="card-body">
                                    <div class="teachername">
                                        <img class="card-img-top" src="images/teacher001.jpg">
                                        <p class="card-text txtbold">@item.TeacherName</p>
                                    </div>
                                    <h5 class="card-title mb-2"><a href="#">@item.Name</a></h5>
                                    <h6 class="ribbon ribbon-purpl-bg fs-14 txtbold mb-2">@item.CountCourse كورسات</h6>
                                </div><!-- end card-body -->
                            </div><!-- end card -->
                        </div>
                        <!-- end col-lg-6 -->
                    }
                </div><!-- end row -->
                <div class="text-center pt-3">
                    <nav aria-label="Page navigation example" class="pagination-box">
                        <ul class="pagination justify-content-center">
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Previous">
                                    <span aria-hidden="true"><i class="la la-arrow-right"></i></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            <li class="page-item active"><a class="page-link" href="#">1</a></li>
                            <li class="page-item"><a class="page-link" href="#">2</a></li>
                            <li class="page-item"><a class="page-link" href="#">3</a></li>
                            <li class="page-item">
                                <a class="page-link" href="#" aria-label="Next">
                                    <span aria-hidden="true"><i class="la la-arrow-left"></i></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div><!-- end col-lg-8 -->
        </div><!-- end row -->
    </div><!-- end container -->
</section><!-- end courses-area -->