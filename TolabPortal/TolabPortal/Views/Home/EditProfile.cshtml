@using Microsoft.Extensions.Options
@using Newtonsoft.Json
@using Tolab.Common
@model TolabPortal.ViewModels.StudentProfileViewModel;
@inject IOptions<ApplicationConfig> options;

@{
    var config = options.Value;

    ViewBag.CurrentPageTitle = "الملف الشخصى";
    var items = new string[] { "الرئيسية", "الملف الشخصى" };
    ViewBag.MenuItems = items;
}

<style>

    #imageUpload {
        display: none;
    }

    #profileImage {
        cursor: pointer;
    }

        #profileImage:hover {
            opacity: 0.6;
        }
</style>

<section class="breadcrumb-area breadprof">
    <div class="container">
        <div class="breadcrumb-content text-left">
            <div class="media media-card align-items-center">
                <div class="media-img media--img media-img-md rounded-full">
                    <img id="profileImage" class="rounded-full lazy" src="/images/img-loading-ar.png" data-src="@config.MediaBaseUrl/ws/Images/StudentImages/@Model.Photo">
                    <input id="imageUpload" type="file" name="profile_photo" placeholder="Photo" accept="image/*">
                </div>
                <div class="media-body">
                    <h2 class="section__title fs-30">@Model.Name</h2>
                    <span class="d-block lh-18 pt-1 pb-2">منضم في @Model.CreationDateInArabic </span>
                </div>
            </div><!-- end media -->
        </div><!-- end breadcrumb-content -->
    </div><!-- end container -->
</section><!-- end breadcrumb-area -->

<section class="course-area section--padding  pt-30px pb-30px bg-grligh">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex align-items-center pb-3">
                    <h3 class="fs-23 txtbold">بيانات شخصية </h3>
                    <div class="my-course-info-action ml-2">
                        <span class="la la-edit icon-element icon-element-xs cursor-pointer shadow-sm" data-toggle="modal" data-target="#editprofileModal" title="Edit Profile"></span>
                    </div>
                    <div class="my-course-info-action ml-2">
                        <span class="la la-user-lock icon-element icon-element-xs cursor-pointer shadow-sm" data-toggle="modal" data-target="#editpsswordModal" title="Edit Password"></span>
                    </div>
                </div>
