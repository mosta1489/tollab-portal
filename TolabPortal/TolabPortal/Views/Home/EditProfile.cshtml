@section Scripts
{
    <script>

        //#region Uploading user profile photo
        $('body').on('click', '#profileImage', function () {
            $("#imageUpload").click();
        });

        $('body').on('change', '#imageUpload', function () {

            var fd = new FormData();
            var files = this.files;

            // Check if file selected + Validate image type and image file size
            if (files.length > 0 && IsValidateImage(files[0])) {

                img = new Image();
                var _URL = window.URL || window.webkitURL;
                img.src = _URL.createObjectURL(files[0]);

                img.onload = function () {
                    var imageWidth = this.width;
                    var imageheight = this.height;

                    // Only upload image when it's dimensions are less than 900
                    if (imageWidth <= 900 && imageheight <= 900) {
                        fd.append('file', files[0]);

                        var currentImageUrl = $('#imageUpload').attr('src');

                        // preview loading spinner
                        $('#profileImage').attr('src', "/images/loading-waiting.gif");

                        $.ajax({
                            url: '/UploadPhoto',
                            type: 'post',
                            data: fd,
                            contentType: false,
                            processData: false,
                            success: function (imageFileName) {
                                if (imageFileName != "no photo") {
                                    var imageFullPath = "https://tollab.azurewebsites.net/ws/Images/StudentImages/" + imageFileName;
                                    console.log("image path: " + imageFullPath);
                                    $('#profileImage').attr('src', imageFullPath);
                                } else {
                                    $('#profileImage').attr('src', currentImageUrl);
                                    alert('Something went wrong while uploading image, Please try again.');
                                }
                            },
                            error: function (request, status, error) {
                                $('#profileImage').attr('src', currentImageUrl);
                                alert('Something went wrong while uploading image, Please try again.');
                            }
                        });
                    }
                    else {
                        alert('Image dimensions must be less than 900 X 900');
                    }
                };

            }
        });

        function IsValidateImage(imageFile) {
            var type = imageFile.type.split('/').pop().toLowerCase();
            var supportedImageTypes = ["jpeg", "jpg", "png"];

            if (supportedImageTypes.includes(type) == false) {
                alert('Please select a valid image file');
                return false;
            }

            var fileSize = (imageFile.size / 1024 / 1024).toFixed(2);
            if (fileSize > 2) {
                alert('Max Upload size is 2MB only');
                return false;
            }
            return true;
        }
        //#endregion

        //triggered when modal is about to be shown
        // $('span[data-toggle="modal"]').click(function (event) {
        //$('#editactModal').on('show.bs.modal', function (e) {
        //    $.get("/GetCategoriesById?categoryId=" + categoryId,
        //        function (data) {
        //            console.log(data);
        //            $("#editInterestsModalHeader").html(data.NameLT);
        //        });
        //});

        var numberOfInterests = '@Model.Interests.Count';

        $(document).on("click", "#editInterest", function () {

            var categoryId = $(this).data('id');

            $.get("/GetCategoriesById?categoryId=" + categoryId,
                function (data) {
                    $('#editInterestContent').html(data);
                    //$('.modal-body #editInterestsModalHeader').html(data.NameLT);
                    $('#editactModal').modal('show');
                });
        });

        // });

        $(document).on("click", "#deleteInterest", function () {
            if (numberOfInterests == '1') {
                alert('لا يمكن حذف جميع النشاطات');
                return;
            }

            $('#deleteModal').modal('toggle')

            var subCategoryId = $(this).data('id');

            $(document).on("click", "#deleteBtn", function () {
            //$("#deleteBtn").click(function (e) {
                $.get("/DeleteInterestyBysubCategoryId?subCategoryId=" + subCategoryId,
                    function (data, success, errors) {
                        if (data == "deleted Successfully") {
                            location.reload();
                        }
                        else {
                            $('#deleteModal').modal('toggle');
                        }
                    });
            });
        });
    </script>
