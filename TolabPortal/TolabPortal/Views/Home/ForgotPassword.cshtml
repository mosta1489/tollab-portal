@model TolabPortal.Models.ForgotPasswordModel

@{
    ViewBag.CurrentPageTitle = "نسيت كلمة المرور";
    var items = new string[] { "الرئيسية", "نسيت كلمه المرور" };
    ViewBag.MenuItems = items;
}

<div class="col-lg-7 mx-auto">
    <div class="register-heading-content-wrap text-left">
        <div class="section-heading">
            <h2 class="notehead mb-2"></h2>
            <p class="mb-4">سيتم ارسال رسالة نصية بها كود التفعيل الى تليفونك المحمول</p>
        </div><!-- end section-heading -->
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger2 alert-dismissible fade show course-alert-info">
            <div class="d-flex align-items-center">
                <i class="la la-info-circle fs-30 mr-2"></i> @ViewBag.ErrorMessage
            </div>
            <button type="button" class="close fs-20 pd-16" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true" class="la la-times"></span>
            </button>
        </div>
    }

    <div class="card card-item">
        <div class="card-body">
            <form method="post" asp-action="ForgotPassword" asp-controller="Home" class="pt-2">
                <div class="input-box">
                    <label class="label-text txtbold">رقم الموبايل</label>
                    <div class="form-group">
                        <input name="phoneNumber" id="phone" class="form-control form--control" type="text" value="@Model?.PhoneNumber">
                        <input hidden id="phoneKey" asp-for="PhoneKey" value="@Model?.PhoneKey" />
                        <span class="la la-mobile input-icon"></span>
                    </div>
                </div>
                <div class="input-box">
                    <label class="label-text txtbold">البريد الالكتروني</label>
                    <div class="form-group">
                        <input  class="form-control form--control" type="text" dir="ltr" asp-for="@Model.Email" value="@Model?.Email">
                        <span class="la la-user input-icon"></span>
                    </div>
                </div><!-- end input-box -->
                <div class="btn-box">
                    <div class="d-flex align-items-center justify-content-between dsmblock">
                        <button type="submit" class="btn theme-btn pullone">تأكيد <i class="la la-arrow-right icon ml-1"></i></button>

                    </div>
                </div><!-- end btn-box -->
            </form>
        </div><!-- end card-body -->
    </div><!-- end card -->
</div>

    @section Scripts
{
<script>
            // custom script used to send the country code along with phone number to the model
            $(function () {
                $("body").on('DOMSubtreeModified', ".iti__flag-container .iti__selected-flag", function () {
                    var countryCode = $('.iti__flag-container .iti__selected-flag').text();
                    $("#phoneKey").val(countryCode);
                });
            });
</script>
    }
</div>