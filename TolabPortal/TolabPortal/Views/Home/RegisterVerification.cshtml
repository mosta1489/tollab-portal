@model TolabPortal.Models.RegisterVerification

@{
    ViewBag.CurrentPageTitle = "تفعيل الحساب";
    var items = new string[] { "الرئيسية", "تفعيل الحساب" };
    ViewBag.MenuItems = items;
}

<div class="register-heading-content-wrap text-left">
    <div class="section-heading">
        <h2 class="notehead mb-2">ادخل كود التفعيل</h2>
        <p class="mb-4">تم ارسال رسالة نصية بها كود التفعيل الى تليفونك المحمول</p>
    </div><!-- end section-heading -->
</div>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger2 alert-dismissible fade show course-alert-info">
        <div class="d-flex align-items-center">
            <i class="la la-info-circle fs-30 mr-2"></i> @ViewBag.ErrorMessage
        </div>
        <button type="button" class="close fs-20 pd-16" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true" class="la la-times"></span>
        </button>
    </div>
}

<div class="card card-item">
    <div class="card-body">
        <form method="post" asp-action="RegisterVerification" asp-controller="Home" class="pt-2">

            <div class="input-box">
                <label asp-for="VerificationCode" class="label-text txtbold">اكتب كود التفعيل</label>
                <div class="form-group">
                    <input asp-for="VerificationCode" class="form-control form--control" type="text" required>
                    <span class="la la-comment input-icon"></span>
                </div>
                <input asp-for="PhoneKey" value="@Model.PhoneKey" hidden />
                <input asp-for="PhoneNumber" value="@Model.PhoneNumber" hidden />
                <input asp-for="ConditionsAgree" value="@Model.ConditionsAgree" hidden />

                <input asp-for="Name" value="@Model.Name" hidden />
                <input asp-for="Email" value="@Model.Email" hidden />
                <input asp-for="Gender" value="@Model.Gender" hidden />
                <input asp-for="Bio" value="@Model.Bio" hidden />
            </div><!-- end input-box -->
            <div class="btn-box">
                <div class="d-flex align-items-center justify-content-between dsmblock">
                    <p>لم يصلك الكود ! <a href="#" class="btn-text linkunder">ارسل مجدداً</a></p>
                    <button type="submit" class="btn theme-btn pullone">تم <i class="la la-arrow-right icon ml-1"></i></button>
                </div>
            </div><!-- end btn-box -->
        </form>
    </div><!-- end card-body -->
</div><!-- end card -->